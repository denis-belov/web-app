{
	"variables":
	{
		"clang-wasm32":
		{
			"LIBS": "/home/denis/libs",
			"REPS": "/home/denis/reps",

			"MAKE_H": "mkdir -p $(BUILD)/h",
			"MAKE_SPV": "mkdir -p $(BUILD)/spv"
		},

		"clang-wasm64":
		{
			"LIBS": "/home/denis/libs",
			"REPS": "/home/denis/reps",

			"MAKE_H": "mkdir -p $(BUILD)/h",
			"MAKE_SPV": "mkdir -p $(BUILD)/spv"
		}
	},

	"entries":
	{
		"type": "bin",

		"name": "main",

		"include_directories":
		[
			"$(SRC)",
			"$(BUILD)/h",
			"$(REPS)/denis-belov",
			"$(REPS)/denis-belov/xgk-math/src",
			"$(REPS)/denis-belov/xgk-api/src"
		],

		"flags_additional": "$(STD_20) $(NO_LINK) $(VERBOSE) $(OPT_FASTX) $(SSE)",

		"watch_files":
		[
			{
				"file": "$(SRC)/main.cpp",
				"watch_files":
				[
					"$(SRC)/main.h",

					{
						"file": "$(BUILD)/h/glsl450_fragment_code.h",

						"watch_files": "$(SRC)/glsl450_fragment_code.frag",

						"do":
						[
							"$(MAKE_SPV) && $(MAKE_H) && ",
							"glslangValidator $(SRC)/glsl450_fragment_code.frag -V -t -o $(BUILD)/spv/glsl450_fragment_code.spv && ",
							"spv2uint32 $(BUILD)/spv/glsl450_fragment_code.spv $(BUILD)/h/glsl450_fragment_code.h glsl450_fragment_code"
						]
					}
				]
			},

			{
				"file": "$(REPS)/denis-belov/xgk-math/build/$(ENV)/output/$(LIB_EXT)/xgk-math.$(LIB_EXT)",
				"watch_directories": "$(REPS)/denis-belov/xgk-math/src",
				"do": "genmake $(ENV) $(REPS)/denis-belov/xgk-math/genmake.json"
			},

			{
				"file": "$(REPS)/denis-belov/xgk-api/build/$(ENV)/output/$(LIB_EXT)/xgk-api.$(LIB_EXT)",
				"watch_directories": "$(REPS)/denis-belov/xgk-api/src",
				"do": "genmake $(ENV) $(REPS)/denis-belov/xgk-api/genmake.json"
			}
		]
	}
}
